<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.detailuser.DetailUserGithubFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:tint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_back"
        android:layout_width="@dimen/dimens_40dp"
        android:layout_height="@dimen/dimens_40dp"
        android:layout_margin="@dimen/dimens_10dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_circle_back" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_img_detail_employee"
        android:layout_width="@dimen/dimens_150dp"
        android:layout_height="@dimen/dimens_150dp"
        android:layout_margin="@dimen/dimens_10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/iv_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_imageView"
        app:shapeAppearanceOverlay="@style/Circular"
        tools:src="@color/ice_blue" />

    <TextView
        android:id="@+id/tv_txt_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_32dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="First Name"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img_detail_employee" />

    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_20dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_bio"
        app:layout_constraintTop_toTopOf="@id/tv_txt_first_name"
        tools:text="Helmy" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_4dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:background="@color/ice_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_txt_first_name" />

    <TextView
        android:id="@+id/tv_txt_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_32dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Last Name"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_txt_first_name" />

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_20dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_bio"
        app:layout_constraintTop_toTopOf="@id/tv_txt_last_name"
        tools:text="Danu Prameireza" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_4dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:background="@color/ice_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_txt_last_name" />

    <TextView
        android:id="@+id/tv_txt_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_32dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Address"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_txt_last_name" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_bio"
        app:layout_constraintTop_toTopOf="@id/tv_txt_address"
        tools:text="05 Jalan Bundaran HI, Jakarata Pusat" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_4dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:background="@color/ice_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />
</androidx.constraintlayout.widget.ConstraintLayout>