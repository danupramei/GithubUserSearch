<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5dp"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:cardCornerRadius="@dimen/dimens_10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_background_employee"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_img_employee"
                android:layout_width="@dimen/dimens_70dp"
                android:layout_height="@dimen/dimens_70dp"
                android:layout_margin="@dimen/dimens_10dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/Circular"
                tools:src="@color/ice_blue" />

            <TextView
                android:id="@+id/tv_name_employee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimens_20dp"
                android:layout_marginBottom="@dimen/dimens_10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_dob"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_img_employee"
                app:layout_constraintTop_toTopOf="@id/iv_img_employee"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Helmy Danu Prameireza" />

            <TextView
                android:id="@+id/tv_txt_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimens_20dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="tanggal lahir"
                app:layout_constraintBottom_toBottomOf="@id/iv_img_employee"
                app:layout_constraintStart_toEndOf="@id/iv_img_employee"
                app:layout_constraintTop_toBottomOf="@id/tv_name_employee" />

            <TextView
                android:id="@+id/tv_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_5dp"
                android:layout_marginEnd="@dimen/dimens_20dp"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="@id/tv_txt_dob"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_txt_dob"
                app:layout_constraintTop_toTopOf="@id/tv_txt_dob"
                tools:text="13 Mei 1996" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>